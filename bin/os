#!/bin/sh

UNAME_S=$(uname -s)

if echo "$UNAME_S" | grep -q 'Darwin'; then
    echo "OSX"
elif echo "$UNAME_S" | grep -q "Linux"; then
    echo "Linux"
elif echo "$UNAME_S" | grep -q 'SunUNAME_S'; then
    echo "Solaris"
elif echo "$UNAME_S" | grep -q 'CYGWIN'; then
    echo "Windows"
else
    echo "UNKNOWN:${UNAME_S}"
fi
