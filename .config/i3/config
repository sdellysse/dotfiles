set $mod Mod4

bar {
  status_command i3status
  position top
}

font pango:monospace 8

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+shift+h move left
bindsym $mod+shift+j move down
bindsym $mod+shift+k move up
bindsym $mod+shift+l move right

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

bindsym $mod+shift+1 move container to workspace 1
bindsym $mod+shift+2 move container to workspace 2
bindsym $mod+shift+3 move container to workspace 3
bindsym $mod+shift+4 move container to workspace 4
bindsym $mod+shift+5 move container to workspace 5
bindsym $mod+shift+6 move container to workspace 6
bindsym $mod+shift+7 move container to workspace 7
bindsym $mod+shift+8 move container to workspace 8
bindsym $mod+shift+9 move container to workspace 9
bindsym $mod+shift+0 move container to workspace 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+w kill

bindsym $mod+space       exec --no-startup-id i3-dmenu-desktop
bindsym $mod+shift+space exec dmenu_run

bindsym XF86Launch1 exec mate-terminal
bindsym Print       exec --no-startup-id deepin-screenshot

## app-launch mode start
  bindsym $mod+a mode $mode_app

  set $mode_app "f=firefox p=pithos m=messenger"
  mode $mode_app {
    bindsym f exec --no-startup-id firefox ; mode "default"
    bindsym p exec --no-startup-id pithos  ; mode "default"
    bindsym m exec --no-startup-id /opt/messengerfordesktop/messengerfordesktop ; mode "default"

    bindsym Escape mode "default"
  }
## app-launch mode end

## i3 mode start
  bindsym $mod+q mode $mode_i3

  set $mode_i3 "i3: q=quit r=restart l=reload"
  mode $mode_i3 {
    bindsym q exec --no-startup-id mate-session-save --logout-dialog
    bindsym r restart
    bindsym l reload

    bindsym Escape mode "default"
  }
## i3 mode end

## resize mode start
  bindsym $mod+r mode $mode_resize

  set $mode_resize "Resize: w=width h=height" 
  mode $mode_resize {
    bindsym w mode $mode_resize_width
    bindsym h mode $mode_resize_height

    bindsym Escape mode "default"
  }

  set $mode_resize_width "Resize Width: minus=smaller plus=bigger h=resize-height"
  mode $mode_resize_width {
    bindsym minus       resize shrink width 10 px or 10 ppt
    bindsym equal       resize grow   width 10 px or 10 ppt
    bindsym shift+equal resize grow   width 10 px or 10 ppt

    bindsym h mode $mode_resize_height

    bindsym Escape mode "default"
  }

  set $mode_resize_height "Resize Height: minus=shorter plus=taller w=resize-width"
  mode $mode_resize_height {
    bindsym minus resize shrink height 10 px or 10 ppt
    bindsym plus  resize grow   height 10 px or 10 ppt
    bindsym equal resize grow   height 10 px or 10 ppt

    bindsym w mode $mode_resize_width

    bindsym Escape mode "default"
  }
## resize mode end

# misc mode start
  bindsym $mod+x mode $mode_misc

  set $mode_misc "s=splits t=layouts f=floats p=focus-parent c=focus-child"
  mode $mode_misc {
    bindsym s mode $mode_split
    bindsym t mode $mode_layout
    bindsym f mode $mode_float
    bindsym p focus parent ; mode "default"
    bindsym c focus child  ; mode "default"

    bindsym Escape mode "default"
  }

  set $mode_split "Split: h=horizontal v=vertical"
  mode $mode_split {
    bindsym h split h ; mode "default"
    bindsym v split v ; mode "default"

    bindsym Escape mode "default"
  }

  set $mode_layout "Layout: s=stacking t=tabbed e=toggle-split f=fullscreen"
  mode $mode_layout {
    bindsym s layout stacking     ; mode "default"
    bindsym t layout tabbed       ; mode "default"
    bindsym e layout toggle split ; mode "default"
    bindsym e fullscreen toggle   ; mode "default"

    bindsym Escape mode "default"
  }

  set $mode_float "Float: l=toggle-float t=toggle-float-tile-focus"
  mode $mode_float {
    bindsym l floating toggle   ; mode "default"
    bindsym t focus mode_toggle ; mode "default"

    bindsym Escape mode "default"
  }
## misc mode end




for_window [class="Pithos"] floating enable 
assign     [class="Pithos"] 10

for_window [class="Messenger for Desktop"] floating enable 
assign     [class="Messenger for Desktop"] 10

for_window [class="Mate-control-center"] floating enable 
for_window [class="Mate-keybinding-properties"] floating enable 
for_window [class="Yelp"] floating enable 
