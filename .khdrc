# enable kwm compatibility mode
khd kwm on

# Set Focus Window To Neighbor
lalt - j             : ~/opt/homebrew/bin/kwmc window -f next
lalt - k             : ~/opt/homebrew/bin/kwmc window -f prev

# Switch to Neighbor Space
lalt - h             : ~/opt/homebrew/bin/kwmc space -fExperimental left
lalt - l             : ~/opt/homebrew/bin/kwmc space -fExperimental right

# Swap Window With Neighbor
lalt + lshift - j    : ~/opt/homebrew/bin/kwmc window -s next
lalt + lshift - k    : ~/opt/homebrew/bin/kwmc window -s prev

# Move window to neighbor space
lalt + lshift - h    : ~/.kwm/move-with.sh left
lalt + lshift - l    : ~/.kwm/move-with.sh right

# Resize Current Window
lalt + lctrl  - up    : ~/opt/homebrew/bin/kwmc window -c expand 0.1 north
lalt + lshift - up    : ~/opt/homebrew/bin/kwmc window -c reduce 0.1 north
lalt + lctrl  - down  : ~/opt/homebrew/bin/kwmc window -c expand 0.1 south
lalt + lshift - down  : ~/opt/homebrew/bin/kwmc window -c reduce 0.1 south
lalt + lctrl  - left  : ~/opt/homebrew/bin/kwmc window -c expand 0.1 west
lalt + lshift - left  : ~/opt/homebrew/bin/kwmc window -c reduce 0.1 west
lalt + lctrl  - right : ~/opt/homebrew/bin/kwmc window -c expand 0.1 east
lalt + lshift - right : ~/opt/homebrew/bin/kwmc window -c reduce 0.1 east

# Set Current Space
lalt - 1             : ~/opt/homebrew/bin/kwmc space -fExperimental 1
lalt - 2             : ~/opt/homebrew/bin/kwmc space -fExperimental 2
lalt - 3             : ~/opt/homebrew/bin/kwmc space -fExperimental 3
lalt - 4             : ~/opt/homebrew/bin/kwmc space -fExperimental 4
lalt - 5             : ~/opt/homebrew/bin/kwmc space -fExperimental 5
lalt - 6             : ~/opt/homebrew/bin/kwmc space -fExperimental 6
lalt - 7             : ~/opt/homebrew/bin/kwmc space -fExperimental 7
lalt - 8             : ~/opt/homebrew/bin/kwmc space -fExperimental 8
lalt - 9             : ~/opt/homebrew/bin/kwmc space -fExperimental 9
lalt - 0             : ~/opt/homebrew/bin/kwmc space -fExperimental 10

# Move Window To Space
lalt + lshift - 1    : ~/opt/homebrew/bin/kwmc window -m space 1
lalt + lshift - 2    : ~/opt/homebrew/bin/kwmc window -m space 2
lalt + lshift - 3    : ~/opt/homebrew/bin/kwmc window -m space 3
lalt + lshift - 4    : ~/opt/homebrew/bin/kwmc window -m space 4
lalt + lshift - 5    : ~/opt/homebrew/bin/kwmc window -m space 5
lalt + lshift - 6    : ~/opt/homebrew/bin/kwmc window -m space 6
lalt + lshift - 7    : ~/opt/homebrew/bin/kwmc window -m space 7
lalt + lshift - 8    : ~/opt/homebrew/bin/kwmc window -m space 8
lalt + lshift - 9    : ~/opt/homebrew/bin/kwmc window -m space 9
lalt + lshift - 0    : ~/opt/homebrew/bin/kwmc window -m space 10

# Set Focus To Next Display (0x2C = /)
lalt          - 0x2C : ~/opt/homebrew/bin/kwmc display -f next

# Move Window To Next Display (0x2C = /)
lalt + lshift - 0x2C : ~/opt/homebrew/bin/kwmc window -m display next

# Poke the focused window to resize itself
lalt - r             : ~/opt/homebrew/bin/kwmc window -r focused
