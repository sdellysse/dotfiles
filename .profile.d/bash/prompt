# vim: ft=sh

BRIGHTGREEN='\[\e[1;32m\]'
GREEN='\[\e[0;32m\]'
LIGHTBLUE='\[\e[1;34m\]'
NORMAL='\[\e[m\]'
RED='\[\e[0;31m\]'
export PS1="${GREEN}\u${NORMAL} on ${GREEN}\h${NORMAL} in ${LIGHTBLUE}\w${BRIGHTGREEN} \$ ${NORMAL}"

export MYSQL_PS1="[\\d]> "

touch "$HOME/opt/.profile.d/bash/prompt" && source "$HOME/opt/.profile.d/bash/prompt"
