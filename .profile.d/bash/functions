# vim: ft=sh

mkcd () {
    local DIRECTORY="$1"; shift

    mkdir -p "$DIRECTORY" && cd "$DIRECTORY"
}

show-git-branches() {
    git ls-remote 2>1 | grep heads | grep -v 'master$' | awk '{ print $2 }' | awk -F / '{ print $3 }'
}


touch "$HOME/opt/.profile.d/bash/env" && source "$HOME/opt/.profile.d/bash/env"
